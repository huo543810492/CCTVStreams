<Window x:Class="CCTVStreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CCTVStreams"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="481.991"
        Height="403.39"
        mc:Ignorable="d">
    <Grid>
        <Image x:Name="videoPlayer" Margin="10,0,10,127" />
        <TextBox
                 Height="21"
                 Margin="0,0,250.2,21.6"
                 VerticalAlignment="Bottom"
                 Text="{Binding ConnectionString}" HorizontalAlignment="Right" Width="215" />
        <Label Width="167"
               Height="27"
               Margin="10,0,0,43"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Content="Connection string" />
        <Button Width="67"
                Height="21"
                Margin="230,0,0,22"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="btnStart_Click"
                Content="Start" />
    </Grid>
</Window>
